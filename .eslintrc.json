{
  "parserOptions": {
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/standard",
    "plugin:jest/recommended",
    "plugin:import/errors"
  ],
  "plugins": ["prettier", "jest", "import"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true
      }
    ]
  }
}
